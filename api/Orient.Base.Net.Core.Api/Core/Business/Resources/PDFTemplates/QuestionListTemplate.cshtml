@model List<Orient.Base.Net.Core.Api.Core.Business.Models.Questions.QuestionAnswerPDFModel>
<html>
<head>
    <style>
        .header {
            text-align: center;
            color: green;
            padding-bottom: 35px;
        }

        table {
            width: 80%;
            border-collapse: collapse;
        }

        td, th {
            border: 1px solid gray;
            padding: 15px;
            font-size: 22px;
            text-align: center;
        }

        table th {
            background-color: green;
            color: white;
        }
    </style>
</head>
<body>
    <div class='header'><h1>INTERVIEW QUESTION!!!</h1></div>
    <table align='center'>
        <tr>
            <th>Question</th>
            <th>Answers</th>

        </tr>
        @foreach (var question in Model)
        {
            <tr>
                <td>@question.Question</td>
                @if (question.Answer == null)
                {
                    <td>Don't have answer for this question</td>
                }
                else
                {
                    <td>@question.Answer.Content</td>
                }
            </tr>
        }

    </table>
</body>
</html>


